<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="UTF-8">
	<title><%= title %></title>

	<%- '<meta name="keywords" content="' %><%= keywords %><%- '">' %>
	<%- '<meta name="description" content="' %><%= description %><%- '">' %>
	<%- '<meta name="author" content="' %><%= author %><%- '">' %>

	<%- '<meta property="og:title" content="' %><%= ogp.title %><%- '">' %>
	<%- '<meta property="og:type" content="' %><%= ogp.type %><%- '">' %>
	<%- '<meta property="og:url" content="' %><%= ogp.url %><%- '">' %>
	<%- '<meta property="og:image" content="' %><%= ogp.image %><%- '">' %>
	<%- '<meta property="og:description" content="' %><%= ogp.description %><%- '">' %>
	<%- '<meta property="og:site_name" content="' %><%= ogp.site_name %><%- '">' %>
	<%- '<meta property="fb:app_id" content="' %><%= ogp.app_id %><%- '">' %>
	<%- '<meta property="twitter:site" content="' %><%= ogp.twitter %><%- '">' %>
	<%- '<meta property="twitter:card" content="' %><%= ogp.card %><%- '">' %>

	<meta name="viewport" content="width=device-width,initial-scale=1.0,minimal-ui">

	<link rel="shortcut icon" href="favicon.ico" type="favicon.icon" />
	<link rel="icon" href="favicon.ico" type="favicon.icon" />
	<link rel="apple-touch-icon" href="webclip.png" />

	<% for(var i=0; i<style.length; ++i) { %>
		<%- '<link rel="stylesheet" href="css/'+ style[i] +'.css">' %>
	<% } %>

<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
	ga('create', 'UA-36723060-5', 'auto');
	ga('send', 'pageview');
</script>
</head>
<body>
	<div id="load">
		<div id="loading">
			<canvas id="wave" width="566" height="800"></canvas>
			<%- '<img id="hogee" width="400" height="800" src="' +hogee +'" alt="ほげぇ">' %>

			<div id="percent"></div>
			<noscript>このWebサイトはJavaScriptを有効にして御覧ください。</noscript>
			<script src="js/loading.js"></script>
		</div>
	</div>

	<main>
		<header class="fixbf">
			<div id="top">
				<h1>
					<img src="img/welcome.png" alt="WELCOME TO FUNSUIKIKAKU&#39;S WEBSITE">
				</h1>
			</div>
			<div id="introduction">
				<h2>イントロダクション</h2>		
				<% for(var i=0; i<introduction.length; ++i) { %>
					<p><%= introduction[i][0] %>
					<% for(var j=1; j<introduction[i].length; ++j) { %>
						<br><%= introduction[i][j] %>
					<% } %>
				<% } %>
			</div>
			<video>
				<source src="video/funsui.webm" type="video/webm">
				<source src="video/funsui.mp4" type="video/mp4">
			</video>
			<canvas id="vcanvas"></canvas>
		</header>

		<section id="about" class="fixbf">
			<div>
				<div class="decoration"></div>
				<h2>噴水企画ってなに？</h2>
				<%= about[0] %>
				<% for(var i=1; i<about.length; ++i) { %>
					<br><%= about[i] %>
				<% } %>
			</div>
		</section>

		<section id="variety" class="fixbf">
			<div>
			</div>
		</section>

		<section id="information">
			<div>
				<div class="decoration"></div>
				<h2>公演情報</h2>
				<%= information[0] %>
				<% for(var i=1; i<information.length; ++i) { %>
					<br><%= information[i] %>
				<% } %>
			</div>
		</section>

		<section id="darkknight">
			<div>
				<img src="img/darkknight.png" srcset="img/darkknight@2x.png 2x" alt="ダークナイトニッポン">
				<% for(var i=0; i<darkknight.length; ++i) { %>
					<br><%= darkknight[i] %>
				<% } %>

				<h2>最新回！<h2>
				<div id="youtube">
				</div>
			</div>
		</section>

		<section id="poster">
			<div>
				<%= poster[0] %>
				<% for(var i=1; i<poster.length; ++i) { %>
					<br><%= poster[i] %>
				<% } %>
			</div>
		</section>

		<section id="special">
			<div>
				<%= special[0] %>
				<% for(var i=1; i<special.length; ++i) { %>
					<br><%= special[i] %>
				<% } %>
			</div>
		</section>

		<section id="contact">
			<div>
				<%= contact[0] %>
				<% for(var i=1; i<contact.length; ++i) { %>
					<br><%= contact[i] %>
				<% } %>

				<form id="mail" class="cancel">

					<label>
						<div>名前<small>（ペンネームも可）</small></div>
						<input type="text" name="name">
					</label>

					<label>
						<div>内容</div>
						<textarea name="content"></textarea>
					</label>

					<input type="submit" value="送信">
				</form>
				
			</div>
		</section>

	</main>

	<script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
	<% for(var i=0; i<script.length; ++i) { %>
		<%- '<script src="js/'+ script[i] +'.js"></script>' %>
	<% } %>

</body>
</html>