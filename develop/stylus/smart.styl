@media only screen and (min-device-width : 320px) and (max-device-width : 480px)

	main
		min-width 0
		min-height 0
	
	// class
	.decoration:before
		width calc(40% - 20px)
	
	.decoration:after
		width calc(40% - 20px)

	// header
	#top, #introduction
		width 90%
		font-size 0.8em
	
	// section
	#about, #information, #darkknight, #poster, #special, #contact
		> div
			width 90%
			font-size 0.8em
	
	#darkknight
		> div
			>img
				width 100%
	
	#mail
		input[type="text"]
			width 100%
		
		textarea
			width 100%
			height 150px