// init
html, body
	width 100%
	height 100%
	//position relative


// class
.decoration
	width 50px
	height 50px
	margin 0 auto
	background url(../embed/logo.min.png)
	background-size 100%
	position relative

.decoration:before
	content ""
	width 220px
	height 3px
	position absolute
	right 70px
	top 50%
	transform translateY(-50%)
	display block
	background white

.decoration:after
	content ""
	width 220px
	height 3px
	position absolute
	left 70px
	top 50%
	transform translateY(-50%)
	display block
	background white


// function
size(percent)
	width 100%
	height percent

center(percent)
	position absolute
	top percent
	left 50%
	transform translate(-50%, -50%)


// loading
#load
	size(100%)
	position absolute
	top 0
	z-index 100
	background white
	transition top 1s ease-in

#load.open
	top -100%

#loading
	width 566px
	height 890px
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%) scale(0.5)

#wave
	position relative
	backface-visibility hidden
	z-index 100

#percent
	height 90px
	margin 0
	color #111
	text-align center
	line-height 90px
	font-size 2.5em

noscript
	display block
	position relative
	top 700px
	color #111
	text-align center
	font-size 2.5em

#hogee
	position absolute
	top 0
	left 50%
	transform translateX(-50%)


// main
main
	size(100%)
	min-width 980px
	min-height 735px
	position absolute
	top 0
	display none
	overflow hidden

#overlay
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background url("../embed/overlay.gif")
	-webkit-transform translateZ(0)

// header
header
	position relative
	size(200%)

	> video
		position fixed
		min-width 100%
		min-height 100%
		z-index -10

#top
	width 800px
	color white
	center(25%)
	border-top solid 5px white
	border-bottom solid 5px white
	z-index 50
	opacity 0
	transition opacity 1s ease

#top.display
	opacity 1


#introduction
	width 790px
	font-size 1.4em
	center(75%)
	z-index 50
	color white

h1
	font-size 1em
	font-weight normal


// about
#about
	position relative
	background black
	size(100%)

	> div
		width 530px
		color white
		text-align center
		font-size 1.4em
		padding-bottom 23px
		border-bottom solid 3px white
		center(50%)


// information
#information
	position relative
	background black
	size(150%)

	> div
		width 530px
		color white
		text-align center
		font-size 1.4em
		padding-bottom 23px
		border-bottom solid 3px white
		center(50%)


// darkknight
#darkknight
	position relative
	size(100%)
	background white

	> div
		width 800px
		text-align center
		center(50%)

#poster
	position relative
	background #333
	color white
	size(50%)

	> div
		width 800px
		text-align center
		center(50%)

#special
	position relative
	background #555
	color white
	size(50%)

	> div
		width 800px
		text-align center
		center(50%)

#contact
	position relative
	background white
	size(100%)

	> div
		width 700px
		text-align center
		center(50%)

		> #mail
			div
				width 12em
				height 1.8em
				margin 10px 0
				background #45BEE6
				border-radius 10px
				line-height 2em
				color white

			input[type="text"]
				width 700px
				height 2em
				box-sizing border-box
				padding 10px
				margin-bottom 15px
				border 2px dashed #45BEE6
				border-radius 10px

			input[type="text"]:focus
				outline none

			textarea
				width 700px
				height 400px
				box-sizing border-box
				margin-bottom 15px
				padding 10px
				border 2px dashed #45BEE6
				border-radius 10px
				resize none

			textarea:focus
				outline none

			input[type="submit"]
				width 12em
				height 2em
				color white
				background #ff4282
				border-radius 10px
				line-height 2em
				border-style none
				transition background 0.2s ease-out

			input[type="submit"]:focus
				outline none

		> #mail.cancel
			input[type="submit"]
				background #828282
				cursor default

