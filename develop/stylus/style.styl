// init
html, body
	width 100%
	height 100%
	min-width 980px
	min-height 550px
	position relative


// class
.decoration
	width 50px
	height 50px
	margin 0 auto
	background url(../embed/logo.png)
	background-size 100%
	position relative

.decoration:before
	content ""
	width 220px
	height 3px
	position absolute
	right 70px
	top 50%
	transform translateY(-50%)
	display block
	background white

.decoration:after
	content ""
	width 220px
	height 3px
	position absolute
	left 70px
	top 50%
	transform translateY(-50%)
	display block
	background white


// function
size(percent)
	width 100%
	height percent

center(percent)
	position absolute
	top percent
	left 50%
	transform translate(-50%, -50%)


// loading
#load
	transform scale(0.5)
	size(100%)

#loading
	width 566px
	height 890px
	position absolute
	center(50%)

#wave
	position relative
	z-index 100

#percent
	height 90px
	margin 0
	color rgba(0, 0, 0, 0.8)
	text-align center
	line-height 90px
	font-size 2.5em

#hogee
	position absolute
	top 0
	left 50%
	transform translateX(-50%)


// main
main
	size(100%)


// header
header
	position relative
	background gray
	size(200%)

#top
	width 40%
	color white
	center(25%)
	padding 3%
	border-top solid 3px white
	border-bottom solid 3px white
	text-align center


#introduction
	width 790px
	font-size 1.4em
	center(75%)

h1
	font-size 1em
	font-weight normal


// about
#about
	position relative
	background black
	size(100%)

	> div
		width 530px
		color white
		text-align center
		font-size 1.4em
		padding-bottom 50px
		border-bottom solid 3px white
		center(50%)